<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/post_card"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/profile_photo_komentar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_account_circle_black_24dp"

                />

            <TextView
                android:id="@+id/member_name_komentar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/profile_photo_komentar"
                />

            <TextView
                android:id="@+id/isi_komentar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Komentar"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/member_name_komentar"
                android:layout_toRightOf="@+id/profile_photo_komentar"
                />

            <TextView
                android:id="@+id/time_komentar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:layout_toRightOf="@+id/email_komentar"
                android:layout_alignParentRight="true"
                android:gravity="right"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>